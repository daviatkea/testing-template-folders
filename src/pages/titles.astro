---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/Heading.astro";
import { Code } from "astro/components";
import HeadingTailwind from "../components/HeadingTailwind.astro";

const code = `<Heading as="h1" level="1">Level 1</Heading>
<Heading as="h2" level="2">Level 2</Heading>
<Heading as="h3" level="3">Level 3</Heading>
<Heading as="h4" level="4">Level 4</Heading>
<Heading as="h5" level="5">Level 5</Heading>
<Heading as="h2" level="4">Level 4</Heading>
<Heading as="h3" level="3">Level 3</Heading>
<Heading as="h4" level="2">Level 2</Heading>
<Heading as="h5" level="1">Level 1</Heading>`;
---

<Layout title="Welcome to Astro.">
  <main class="prefix">
    <div class="titles">
      <Heading as="h1" level="1">Level 1</Heading>
      <Heading as="h2" level="2">Level 2</Heading>
      <Heading as="h3" level="3">Level 3</Heading>
      <Heading as="h4" level="4">Level 4</Heading>
      <Heading as="h5" level="5">Level 5</Heading>
      <Heading as="h2" level="4">Level 4</Heading>
      <Heading as="h3" level="3">Level 3</Heading>
      <Heading as="h4" level="2">Level 2</Heading>
      <Heading as="h5" level="1">Level 1</Heading>
    </div>

    <div class="titles">
      <HeadingTailwind as="h1" level="1">Level 1</HeadingTailwind>
      <HeadingTailwind as="h2" level="2">Level 2</HeadingTailwind>
      <HeadingTailwind as="h3" level="3">Level 3</HeadingTailwind>
      <HeadingTailwind as="h4" level="4">Level 4</HeadingTailwind>
      <HeadingTailwind as="h5" level="5">Level 5</HeadingTailwind>
      <HeadingTailwind as="h2" level="4">Level 4</HeadingTailwind>
      <HeadingTailwind as="h3" level="3">Level 3</HeadingTailwind>
      <HeadingTailwind as="h4" level="2">Level 2</HeadingTailwind>
      <HeadingTailwind as="h5" level="1">Level 1</HeadingTailwind>
    </div>

    <Code code={code} lang="astro" wrap theme="github-dark" />
  </main>
</Layout>

<style>
  .prefix {
    display: grid;
    gap: 5rem;
    align-items: start;
  }

  @media (width > 48rem) {
    .prefix {
      grid-template-columns: max-content max-content;
    }
  }
</style>
