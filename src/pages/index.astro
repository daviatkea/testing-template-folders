<style>
  :root {
    --step-1: 1rem;
    --step-2: 1.25rem;
    --step-3: 1.5rem;
    --step-4: 2rem;
    --step-5: 3rem;
  }

  img {
    max-width: 100%;
    display: block;
  }

  ul {
    padding: 0;
    list-style: none;
  }

  body {
    background: hsl(264 50% 97%);
  }

  main {
    font-family: system-ui;
    max-width: 65ch;
    margin-inline: auto;
    display: grid;
    gap: 2rem;
  }

  section {
    background: hsl(240 23% 30%);
    padding: 2rem;
    color: #fff;
    border-radius: 1rem;

    display: grid;
    gap: 0.5rem;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .card {
    position: relative;
    background: #fff;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
    color: #2b2b2b;
    padding: 1rem;
    border-radius: 0.5rem;

    display: grid;
    gap: 0.5rem;
  }

