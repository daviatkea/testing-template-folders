---
const { variant, href } = Astro.props;

let Tag = "button";

if (href) {
  Tag = "a";
}
---

<Tag data-variant={variant} {href}>
  <slot />
</Tag>

<style>
  a,
  button {
    border: unset;
    font: inherit;
    padding: 0.5rem 1rem;
    border-radius: 3px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    position: relative;
  }

  [data-variant]:is(main *)::after {
    content: "<a>";
    position: absolute;
    inset: 0;
    translate: 0 calc(100% + 2px);
    text-align: center;
    color: #000;
    display: block;
    font-size: 0.8rem;
    font-weight: 700;
  }

  [data-variant]:is(main button)::after {
    content: "<button>";
  }

  [data-variant="primary"] {
    background-color: blue;
    color: white;
  }

  [data-variant="secondary"] {
    background-color: white;
    color: blue;
    box-shadow: inset 0 0 0 1px blue;
  }

  [data-variant="tertiary"] {
    color: #2b2b2b;
    text-decoration: underline;
    padding: 0.25rem 0.5rem;
  }

  [aria-current="page"] {
    background-color: #2b2b2b;
    color: white;
    text-decoration: none;
  }
</style>
